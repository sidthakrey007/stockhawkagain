<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.udacity.stockhawk.ui.OneFragment">

    <com.db.chart.view.LineChartView
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/chart1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:layout_weight="2"

        />
    <FrameLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>


    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        app:orientation="horizontal"
        app:columnCount="2"
        android:background="@color/detailbackground"
        app:useDefaultMargins="true"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingLeft="16dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingRight="16dp"
        >

        <android.support.v4.widget.Space
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>
        <TextView
            android:id="@+id/stockHeading"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Stock Exchange:"
            android:textSize="18sp"
            android:fontFamily=""
            android:textColor="#FFFFFF"
            app:layout_gravity="fill_horizontal"
            />
        <TextView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="NASDAQ"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"
            />


        <TextView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Symbol:"
            android:textSize="18sp"
            android:fontFamily=""
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"
            />
        <TextView
            android:id="@+id/symbol_detail"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"
            />

        <TextView

            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Min Price:"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"
            />
        <TextView
            android:id="@+id/minprice_detail"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"
            />
        <TextView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Max Price:"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"
            />
        <TextView
            android:id="@+id/maxprice_detail"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            app:layout_gravity="start|left"

            />

        <android.support.v4.widget.Space
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

    </android.support.v7.widget.GridLayout>
</LinearLayout>
